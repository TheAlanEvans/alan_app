<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <!-- Latest compiled and minified CSS
    This will comment out html-->

    <!--My bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!--the css stylesheet for the header etc -->
    <link rel="stylesheet" href="{{asset('css/mystyle.css')}}">
    <!--the css stylesheet for nav bar -->
    <link rel="stylesheet" href="{{asset('css/dropdown.css')}}">
    <!-- the css stylesheet for the modal box -->
    <link rel="stylesheet" href="{{asset('css/modalBox.css')}}">



    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Test Website</a>

            <!--My dropdown list-->
            <div class="dropdown">
                <a class="navbar-brand">Dropdown</a>
                <div class="dropdown-content">
                    <a href="">Page 1</a>
                    <a href="">Page 2</a>
                </div>
            </div>

        </div>
    </div>
</nav>


<div class="container">

    <div class="starter-template">
        <h1>Test Website</h1>
        <p class="lead">This is my test website.<br> This website will show a form.</p>
    </div>


    <!-- Trigger/Open The Modal -->
    <button id="myBtn">Button</button>

    <!-- The Modal -->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </p>
        </div>

    </div>

    {% block body %}{% endblock %}

</div><!-- /.container -->

{% block javascripts %}
    <!-- Linking the javascript to the button -->
    <script src="{{ asset('js/myjsfile.js') }}"></script>

{% endblock %}
</body>
</html>
